<section id="head-form" class="clearfix">
  <h1>URL Shortener</h1>
  <div class="col-sm-12" id="form-container">
    <form action="/" method="POST">
      <div class="form-group col-sm-6">
        <input type="text" name="url" class="form-control" id="url-input" placeholder="You original URL here">
      </div>
      <div class="col-sm-3">
        <button type="submit" class="btn btn-default pull-left">Shorten URL</button>
      </div>
    </form>
  </div>
</section>

<section id="url-table" class="col-sm-10 col-sm-offset-1">
  <table class="table">
    <thead class="thead-default">
      <tr>
        <th>Original URL</th>
        <th>Short URL</th>
        <th>All Clicks</th>
      </tr>
    </thead>
    <tbody>
      {{#if noLinks}}
        <tr class="text-center">
          <td colspan="3"><b>No shortened links yet. Please use the form at the top of the page.</b></td>
        </tr>
      {{else}}
        {{#each allLinks as |link|}}
          <tr>
            <td>
              <a href={{link.long}}>{{link.long}}</a>
            </td>
            <td>
              <a href={{formatShort @key}}>{{formatShort @key}}</a>
            </td>
            <td>{{link.clicks}}</td>
          </tr>
        {{/each}}
      {{/if}}
    </tbody>
  </table>
</section>

